<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="Hãy nhập một số:" 
               Canvas.Left="53" Canvas.Top="119">
        </Label>
        <Image Name="imgAvatar" Source="/Images/avatar01.jpg" 
               Width="80" Height="80" 
               Canvas.Left="65" Canvas.Top="177"></Image>
        <TextBox Name="txtName" Canvas.Left="175" TextWrapping="Wrap" 
                 Text="TextBox" Canvas.Top="123" Width="120"/>
        <Button Width="80" Height="35" Content="Change" 
                Name="btnChangeImage" Click="btnChangeImage_Click"></Button>
    </Canvas>
</Window>
