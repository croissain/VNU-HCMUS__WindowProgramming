<Window x:Class="RandomEnglish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomEnglish"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Canvas>
        <TextBlock Name="quoteDesc"
                   FontSize="30"
                   FontFamily="Montserrat"
                   TextWrapping="Wrap"
                   Width="311"
                   Height="308" Canvas.Top="209" Canvas.Left="82"
                   Text="">
            Click the button below to get an random animal word.
            Enjoy!

        </TextBlock>

        <Image Name="imgQuote" 
               Source="/img/hello.jpg"
               Width="500"
               Height="500"
               Margin="364,42,36,42"
               Canvas.Bottom="150"
               Canvas.Right="60" Canvas.Left="64" Canvas.Top="79">
        </Image>

        <Button Name="btnChangeImage" 
                Width="100" 
                Height="50" 
                FontSize="20"
                Content="Change" 
                Click="btnChangeImage_Click"
                Canvas.Bottom="150"
                Canvas.Left="150">
        </Button>
    </Canvas>
</Window>
